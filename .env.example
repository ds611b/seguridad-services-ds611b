# ========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ========================================

# Puerto donde correrá el servidor
PORT=

# Host/dirección IP del servidor (0.0.0.0 para permitir conexiones externas)
HOST=

# Entorno de ejecución (development, production, test)
NODE_ENV=

# Ruta donde se servirá la documentación de la API
DOCS_PATH=

# Nivel de logging (trace, debug, info, warn, error, fatal)
LOG_LEVEL=

# ========================================
# BASE DE DATOS
# ========================================

# Nombre de la base de datos
DB_NAME=

# Usuario de la base de datos
DB_USER=

# Contraseña de la base de datos
DB_PASSWORD=

# Host/IP de la base de datos
DB_HOST=

# ========================================
# JWT (JSON WEB TOKENS)
# ========================================

# Secreto para firmar los tokens JWT (usar string aleatorio largo y seguro)
JWT_SECRET=

# Tiempo de expiración de los Access Tokens JWT (ej: 30s, 15m, 1h)
# Access Tokens son de corta duración para mayor seguridad
JWT_ACCESS_EXPIRES=